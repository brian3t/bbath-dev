<config>
	<modules>
		<Bluejalappeno_Orderexport>
			<version>0.0.1</version>
		</Bluejalappeno_Orderexport>
	</modules>
	 <global>
        <models>
            <bluejalappeno_orderexport>
                <class>Bluejalappeno_Orderexport_Model</class>
            </bluejalappeno_orderexport>
        </models>
        <helpers>
        <bluejalappeno_orderexport>
            <class>Bluejalappeno_Orderexport_Helper</class>
        </bluejalappeno_orderexport>
    	</helpers>
         <blocks>
            <adminhtml>
                <rewrite>
                     <sales_order_grid>Bluejalappeno_Orderexport_Block_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
        </blocks>
    </global>
    <admin>
         <routers>
            <adminhtml>
                <args>
                    <modules>
                        <Bluejalappeno_Orderexport before="Mage_Adminhtml">Bluejalappeno_Orderexport</Bluejalappeno_Orderexport>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Bluejalappeno_Orderexport>
                    <files>
                        <default>Bluejalappeno_Orderexport.csv</default>
                    </files>
                </Bluejalappeno_Orderexport>
            </modules>
        </translate>
        <default>
        <orderexport>
        <condition_name>order_export</condition_name>
        </orderexport>
        </default>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <order_export>
                                            <title>Export Orders</title>
                                        </order_export>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
    <crontab>
	    <jobs>
	        <Bluejalappeno_Orderexport>
	            <schedule><cron_expr>0 * * * *</cron_expr></schedule>
	            <run>
	                <model>bluejalappeno_orderexport/export_csv::importOrders</model>
	            </run>
	        </Bluejalappeno_Orderexport>
	        <Bluejalappeno_Stockimport>
	            <schedule><cron_expr>0 7 * * *</cron_expr></schedule>
	            <run>
	                <model>bluejalappeno_orderexport/export_csv::importStock</model>
	            </run>
	        </Bluejalappeno_Stockimport>
	    </jobs>
	</crontab>
</config>
