<config>
	<sections>
		<system translate="label">
			<groups>
				<wsalog translate="label">
					<label>Webshopapps Log Facility</label>
					<frontend_type>text</frontend_type>
					<sort_order>999</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>0</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</active>
						<admin_level translate="label">
							<label>Minimum Log Level for output to Admin Panel</label>
							<frontend_type>select</frontend_type>
							<sort_order>10</sort_order>
							<source_model>wsacommon/system_config_source_severities
							</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</admin_level>
						<system_level translate="label">
							<label>Minimum Log Level for output to System Log</label>
							<frontend_type>select</frontend_type>
							<source_model>wsacommon/system_config_source_severities</source_model>
							<sort_order>15</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</system_level>
						<email_level translate="label">
							<label>Minimum Log Level for Sending Email</label>
							<frontend_type>select</frontend_type>
							<sort_order>20</sort_order>
							<source_model>wsacommon/system_config_source_severities
							</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
							<comment>Will email recipient when logs of this level raised</comment>
						</email_level>
						<contact_email translate="label">
							<label>Logging Email Address</label>
							<frontend_type>text</frontend_type>
							<sort_order>30</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</contact_email>
						<sender_email translate="label">
							<label>Sender Email</label>
							<frontend_type>text</frontend_type>
							<sort_order>40</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</sender_email>
						<sender_email_name translate="label">
							<label>Sender Email Name</label>
							<frontend_type>text</frontend_type>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</sender_email_name>
						<email_subject translate="label">
							<label>Email Subject</label>
							<frontend_type>text</frontend_type>
							<sort_order>60</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</email_subject>
					<!-- 	<empty_system_log translate="label">
							<label>Empty System Log</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>50</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</empty_system_log> -->
					</fields>
				</wsalog>
			</groups>
		</system>
	</sections>
</config>
