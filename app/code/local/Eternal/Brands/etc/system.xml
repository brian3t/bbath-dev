<?xml version="1.0"?>
<config>
    <tabs>
        <eternal translate="label">
            <label>Eternal Extensions</label>
            <sort_order>150</sort_order>
        </eternal>
    </tabs>
    <sections>
        <eternal_brands translate="label">
            <label>Brands</label>
            <tab>eternal</tab>
            <frontend_type>text</frontend_type>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <comment>
                        <![CDATA[<strong>IMPORTANT:</strong><br/>
                        This is the directory to store brand images: <strong>media/wysiwyg/eternal/brands/</strong>. <br/>Default size is 170px x 100px.<br/><br/>]]>
                    </comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <brand_title translate="label">
                            <label>Brand Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </brand_title>
                        <attr_id translate="label">
                            <label>Brand Attribute Code</label>
                            <comment>
                                <![CDATA[Identifier of the attribute which contains the information about brands in your store. Search for that code in <em>Catalog > Attributes > Manage Attributes</em>.]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-code</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </attr_id>
                        <image_extension translate="label">
                            <label>Brand Image File Extension</label>
                            <comment>
                                <![CDATA[E.g. png or jpg, gif, etc.]]>
                            </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </image_extension>
                        <link_search_enabled translate="label">
                            <label>Brand Logo is a Link to Search Results</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </link_search_enabled>
                    </fields>
                </general>
                <slider translate="label">
                    <label>Brand Slider</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable translate="label">
                            <label>Brand Sliders</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable>
                        <easing translate="label">
                            <label>Easing Method</label>
                            <comment>The type of easing applied to the transition animation.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>eternal_brands/system_config_source_jquery_easing</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </easing>
                        <timeout translate="label">
                            <label>Timeout</label>
                            <comment>Time (in milliseconds) between slide transitions. Note that 1000 miliseconds = 1 second.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </timeout>
                        <speed translate="label">
                            <label>Transition Speed</label>
                            <comment>Time (in milliseconds) of slide transition animation.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
                        <pause translate="label">
                            <label>Pause on Hover</label>
                            <comment>SIf enabled, when the slider is mouseovered then the automatic transition functionality will pause.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </pause>
                        <loop translate="label">
                            <label>Loop</label>
                            <comment>If enabled, animation will loop.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loop>
                    </fields>
                </slider>
            </groups>
        </eternal_brands>
    </sections>
</config>