<?xml version="1.0" encoding="UTF-8"?>
<config>
	<tabs>
		<magebuzz translate="label" module="dealerlocator">
			<label>Magebuzz Add-ons</label>
		</magebuzz>
	</tabs>
    <sections>
        <magebuzz translate="label" module="dealerlocator">
            <label>Google Map Options</label>
            <tab>magebuzz</tab>
			<sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <google_map_options translate="label" module="dealerlocator">
                    <label>General Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
 
                    <fields>
                        <google_geo_api_url translate="label">
                            <label>Google Geo API URL</label>
                            <comment><![CDATA[Leave empty for default.<br/>
							Format: <b>http://maps.googleapis.com/maps/api/geocode/json</b>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_geo_api_url>
                        <google_api_key translate="label">
                            <label>Google API Key</label>
                            <comment><![CDATA[<a href="https://code.google.com/apis/console">Get API key for your domain</a>]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </google_api_key>
						<show_search_form translate="label">
                            <label>Show Search Form</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_search_form>
						<show_map_on_page_load translate="label">
                            <label>Show Map on Page Load</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_map_on_page_load>
						<default_location_address translate="label">
                            <label>Default Location Address</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_location_address>
						<default_search_radius translate="label">
                            <label>Default Search Radius</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_search_radius>
						<distance_units translate="label">
                            <label>Distance Units</label>
							<frontend_type>select</frontend_type>
                            <source_model>dealerlocator/distanceunits</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </distance_units>
						<number_of_result translate="label">
                            <label>Number of Result</label>
							<frontend_type>text</frontend_type>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_of_result>
						<show_top_link translate="label">
							<label>Show Top Link</label>
                            <frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</show_top_link>
                    </fields>
                </google_map_options>
            </groups>
        </magebuzz>
    </sections>
</config>