<?php
/**
 * Template for Mage_Page_Block_Html
 */
?>
<?php
$venedor = $this->helper('venedor');
$containerClass = $venedor->getContainerClass();
$rowClass = $venedor->getRowClass();
$spanClass = $venedor->getSpanClass();
$bootstrapClass = $venedor->getBootstrapClass();

$icon_set = $venedor->getConfigDesign('general/icon_set');
$bodyClass = $this->getBodyClass() . ' ' . $icon_set . ' ' . $bootstrapClass . ' bsr';
$b = $venedor->getConfigGroup();
?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="<?php echo $this->getLang() ?>" lang="<?php echo $this->getLang() ?>">
<head>
<?php echo $this->getChildHtml('head') ?>
</head>
<body class="2columns <?php echo $bodyClass ?>">
<?php echo $this->getChildHtml('after_body_start') ?>
    <div class="notices-container">
        <div class="<?php echo $containerClass ?>">
            <?php echo $this->getChildHtml('global_notices') ?>
        </div>
    </div>
    <div class="header-container">
        <?php echo $this->getChildHtml('header') ?>
    </div>
    <div class="main-container">
        <?php
        $main_slider = $this->getChildHtml('main-slider');
        if ($main_slider) : ?>
        <div class="main-slider">
            <?php echo $main_slider; ?>
        </div>
        <?php endif; ?>
        <?php
        $main_banner = $this->getChildHtml('main-banner');
        if ($main_banner) : ?>
        <div class="main-banner">
            <?php echo $main_banner; ?>
        </div>
        <?php endif; ?>
        <?php
        if (!$b['category']['banner_below_breadcrumbs']) 
            echo $this->getChildHtml('category.banner');
        ?>
        <?php $breadcrumbs_html = $this->getChildHtml('breadcrumbs') ?>
        <?php echo $breadcrumbs_html ?>
        <?php
        if ($b['category']['banner_below_breadcrumbs']) 
            echo $this->getChildHtml('category.banner');
        ?>
        <div class="main<?php if (!$breadcrumbs_html) echo ' nobc' ?>">
            <div class="<?php echo $containerClass ?>">
                <?php if ($bootstrapClass != 'bv3') : ?>
                <div class="<?php echo $rowClass ?>">
                <?php endif; ?>
                    <div class="<?php echo $spanClass ?>9 main-content">
                        <?php echo $this->getChildHtml('global_messages') ?>
                        <?php echo $this->getChildHtml('content') ?>
                    </div>
                    <div class="<?php echo $spanClass ?>3 sidebar sidebar-right">
                        <?php echo $this->getChildHtml('right') ?>
                    </div>
                <?php if ($bootstrapClass != 'bv3') : ?>
                </div>
                <?php endif; ?>
            </div>
        </div>
    </div>
    <div class="footer-container">
        <?php
        $footer_banner = $this->getChildHtml('footer-banner');
        if ($footer_banner) : ?>
        <div class="footer-banner">
            <?php echo $footer_banner; ?>
        </div>
        <?php endif; ?>
        <?php echo $this->getChildHtml('footer') ?>
        <?php echo $this->getChildHtml('before_body_end') ?>
    </div>
<?php echo $this->getAbsoluteFooter() ?>
</body>
</html>
