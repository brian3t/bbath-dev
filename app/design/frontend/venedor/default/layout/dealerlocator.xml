<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="top.links">
            <action method="addLink" translate="label title" module="dealerlocator" ifconfig="magebuzz/google_map_options/show_top_link">
			<label>Dealers</label>
			<url>dealer-locator</url>
			<title>Dealers</title>
			<prepare>true</prepare>
			<urlParams/>
			<position>0</position>
			</action>
        </reference>
    </default>
    <dealerlocator_index_index>
        <reference name="head">
            <action method="removeItem"><type>js</type><name>eternal/bootstrap/bootstrap-select.min.js</name></action>
            <action method="removeItem"><type>js</type><name>eternal/venedor.js</name></action>
        <action method="addCss"><stylesheet>css/magebuzz/dealerlocator.css</stylesheet></action>
            <action method="addJs"><name>eternal/venedor_no_select.js</name></action>
    </reference>
		<reference name="root">
			<action method="setTemplate"><template>page/1column.phtml</template>
				<action method="setIsHandle"><applied>1</applied></action>
			</action>
		</reference>
        <reference name="content">
            <block type="dealerlocator/dealerlocator" name="dealerlocator" template="dealerlocator/dealerlocator.phtml" />
        </reference>
    </dealerlocator_index_index>
</layout> 